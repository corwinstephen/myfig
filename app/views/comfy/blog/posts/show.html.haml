= render partial: 'layouts/header'

%main
  .bgmain
    .centercolumn.longform.narrow
      .blogpost
        %h1= @post.title

        .blogpost-author
          = "by #{@post.author.present? ? @post.author : "Annonymous"} &nbsp;| &nbsp;".html_safe
        .date
          = @post.published_at.strftime("%B %d, %Y")

        .blogpost-content
          = @post.content.html_safe

= render 'layouts/footer'
